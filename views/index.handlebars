<div class="d-flex justify-content-center mt-5">
  <form action="/" method="POST" class="card" style="width: 50%;">
    <div class="card-head text-center">
      <h2 class="mt-2">URL Shortener</h2>
      <i class="fas fa-link mx-3" style="font-size: 100px;"></i>
    </div>

    <div class="card-body text-center">
      <div class="form-group mt-2">
        <input type="url" class="form-control" name="inputurl" value="{{#if shorturl}}{{host}}{{shorturl}}{{/if}}"
          placeholder="Input URL" required>
      </div>
      <button class="btn btn-outline-dark mt-2" type="submit">Sunmit</button>
    </div>
  </form>
</div>