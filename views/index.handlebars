<div class="d-flex justify-content-center mt-5">
  <form action="/" method="POST" class="card" style="width: 50%;">
    <div class="card-head text-center">
      <h2 class="mt-2">URL Shortener</h2>
      <i class="fas fa-link mx-3" style="font-size: 100px;"></i>
    </div>

    {{#if error}}
    <div class="alert alert-danger text-center mt-3 mx-5" role="alert">
      {{error}}
    </div>
    {{/if}}

    {{#unless shorturl}}
    <div class="card-body text-center">
      <div class="form-group mt-2">
        <input type="url" class="form-control" name="inputurl" placeholder="Input URL" required>
      </div>
      <button class="btn btn-outline-dark mt-2" type="submit">製作短網址</button>
    </div>
    {{/unless}}

    {{#if shorturl}}
    <div class="card-body text-center">
      <h3>為你做出一個短網址:</h3>
      <p><a href="{{host}}{{shorturl}}" target="blank">{{host}}{{shorturl}}</a></p> &nbsp;
      <button class="copy-btn"></button>
      <a href="/" class="btn btn-outline-info mt-2">繼續製作</a>
    </div>
    {{/if}}

  </form>
</div>